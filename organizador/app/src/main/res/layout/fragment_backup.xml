<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnBackup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Backup a Google Drive"
        android:layout_marginBottom="8dp"
        android:enabled="false"/>

    <Button
        android:id="@+id/btnRestore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurar de Google Drive"
        android:layout_marginBottom="16dp"
        android:enabled="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="8dp"/>

    <Button
        android:id="@+id/btnLocalBackup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Backup Local"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnLocalRestore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurar de Archivo Local"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota: Los backups locales se guardan en la carpeta de la aplicaciÃ³n"
        android:textSize="12sp"
        android:layout_marginTop="16dp"/>
</LinearLayout>