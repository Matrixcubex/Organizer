<!-- app/src/main/res/navigation/nav_graph.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Fragments principales -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.organizer.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/addEventFragment"
        android:name="com.example.organizer.ui.add.AddEventFragment"
        android:label="@string/add_event"
        tools:layout="@layout/fragment_add_event"/>

    <fragment
        android:id="@+id/consultFragment"
        android:name="com.example.organizer.ui.consult.ConsultFragment"
        android:label="@string/consult_events"
        tools:layout="@layout/fragment_consult"/>

    <fragment
        android:id="@+id/backupFragment"
        android:name="com.example.organizer.ui.backup.BackupFragment"
        android:label="@string/backup"
        tools:layout="@layout/fragment_backup"/>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.organizer.ui.about.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about"/>


    <!-- Acciones de navegaciÃ³n -->
    <action
        android:id="@+id/action_home_to_add"
        app:destination="@id/addEventFragment"/>
    <action
        android:id="@+id/action_consult_to_home"
        app:destination="@id/homeFragment"/>
    <action
        android:id="@+id/action_consultFragment_to_addEventFragment"
        app:destination="@id/addEventFragment" />
</navigation>