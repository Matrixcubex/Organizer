<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Acompa침aMe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistente activo"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:background="@drawable/status_background"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Bot칩n principal grande -->
    <ImageButton
        android:id="@+id/btn_activate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_activate"
        android:background="@drawable/btn_circle_background"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:scaleType="centerInside" />

    <!-- Botones inferiores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Bot칩n Actividades -->
            <ImageButton
                android:id="@+id/btn_activities"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_activities"
                android:background="@drawable/btn_secondary_background"
                android:scaleType="centerInside" />

            <!-- Bot칩n Chat -->

            <ImageButton
                android:id="@+id/btn_chat"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_primary_background"
                android:scaleType="centerInside"
                android:src="@drawable/ic_chat" />

            <ImageButton
                android:id="@+id/btn_consult"
                android:layout_width="86dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_primary_background"
                android:scaleType="centerInside"
                android:src="@drawable/ic_evnt" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>